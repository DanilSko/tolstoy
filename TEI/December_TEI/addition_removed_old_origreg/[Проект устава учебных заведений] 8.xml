    , весьма понятно не рискуя
    
     
     
      повѣрить
     
    
    столь важное дело
    
     
     
      народнаго
     
    
    
     
     
      образованія
     
    
    
     
     
      безконтрольно
     
    
    
     
     
      отдѣльнымъ
     
    
    
     
     
      лицамъ
     
    
    .
    
     
     
      Вмѣстѣ
     
    
    
     
     
      съ
     
    
    
     
     
      тѣмъ
     
    
    
     
     
      этотъ
     
    
    контроль
    
     
     
