  <div rend="section" xml:id="h000012001">
   <head rend="center">
    I.
    <lb />
    * ПЕРВЫЙ ПЛАН РОМАНА «ЧЕТЫРЕ ЭПОХИ
    <lb />
    РАЗВИТИЯ».
   </head>
   <div>
    <p rend="left">
     Засыпаю.
    </p>
    <p rend="left">
     2-й день 2
     
      
      
       недѣли
      
     
     
      
      
       послѣ
      
     
     
      
      
       приѣзда
      
     
     , имянины бабушки, (Ва- лахины, страстная любовь,
     
      
      
       обѣ[дъ]
      
     
     ) гулянье, (
     
      
      
       съ
      
     
     
      
      
       дѣтьми
      
     
     ) кондитерская],
     
      
      
       обѣдъ
      
     
     , Валахин[ы], танцы,
     
      
      
       театръ
      
     
     . —
     
      
      
       Разговоръ
      
     
     
      
      
       съ
      
     
     
      
      
       братомъ
      
     
     о
     
      
      
       проведенномъ
      
     
     
      
      
       днѣ
      
     
     . — Пьяный
     
      
      
       Карлъ
      
     
     
      
      
       Иванычъ
      
     
     .
     
      
      
       Дѣтство
      
     
     . — (Смерть матери.) —
    </p>
   </div>
  </div>
  <div rend="section" xml:id="h000012001003">
   <head rend="center">
    <hi rend="Razradka">
     Юность
    </hi>
    .
   </head>
   <p rend="left">
    1-й день.
    
     
     
      Мнѣ
     
    
    18
    
     
     
      лѣтъ
     
    
    . Я прошу у отца
    
     
     
      денегъ
     
    
    , мачиха на-
    
     
     
      доѣдаетъ[?]
     
    
    ,
    
     
     
      ѣду
     
    
    на
    
     
     
      экзаменъ
     
    
    
     
     
      встрѣчаю
     
    
    брата
    
     
     
      верхомъ
     
    
    ,
    
     
     
      обѣдъ
     
    
    , —
    
     
     
      отчаяніе
     
    
    
     
     
      послѣ
     
    
    
     
     
      обѣда
     
    
    , прогулки мимо дворца,
    
     
     
      трактиръ
     
    
    ,
    
     
     
      исторія
     
    
    .
    
     
     
      Отецъ
     
    
    
     
     
      вечеромъ
     
    
    
     
     
      зоветъ
     
    
    
     
     
      къ
     
    
    
     
     
      себѣ
     
    
    , нагоняй. Я прошусь
    
     
     
      въ
     
    
    деревню (Москва) утро
    
     
     
      въ
     
    
    
     
     
      трактирѣ
     
    
    
     
     
      одинъ
     
    
    , хожу по
    
     
     
      лавкамъ
     
    
    ,
    <pb n="242" />
    
     
     
      ѣду
     
    
    
     
     
      къ
     
    
    
     
     
      Валахинымъ
     
    
    ,
    
     
     
      обѣдаю
     
    
    , конфужусь, влюбляюсь,
    
     
     
      денегъ
     
    
    
     
     
      нѣтъ
     
    
    . —
    
     
     
      Послѣ
     
    
    
     
     
      обѣда
     
    
    старый
    
     
     
      гувернеръ
     
    
    и старые товарищи. Старая гувернантка
    
     
     
      пьетъ
     
    
    у меня чай,
    
     
     
      вечерній
     
    
    
     
     
      визитъ
     
    
    
     
     
      къ
     
    
    князю.
    
     
     
      Приѣзжаетъ
     
    
    
     
     
      Д[митрій]
     
    
    ,
    
     
     
      выручаетъ
     
    
    меня,
    
     
     
      разговоръ
     
    
    
     
     
      съ
     
    
    
     
     
      нимъ
     
    
    и
    
     
     
      разказъ
     
    
    о
    
     
     
      сестрѣ
     
    
    .
    
     
     
      Онъ
     
    
    
     
     
      женихъ
     
    
    .
   </p>
   <p rend="left">
    Восторженные планы. Я
    
     
     
      рѣшаюсь
     
    
    (быть
    
     
     
      ученымъ
     
    
    ,
    
     
     
      писателемъ
     
    
    )
    
     
     
      ѣхать
     
    
    
     
     
      съ
     
    
    
     
     
      Д[митріемъ]
     
    
    .
   </p>
