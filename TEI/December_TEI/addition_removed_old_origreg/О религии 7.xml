      онъ
     
    
    
     
     
      съ
     
    
    улыбкой
    
     
     
      показываетъ
     
    
    
     
     
      вамъ
     
    
    ,
    
     
     
      какъ
     
    
    
     
     
      всѣ
     
    
    
     
     
      явленія
     
    
