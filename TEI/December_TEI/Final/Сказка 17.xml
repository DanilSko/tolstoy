 и <choice><reg>успел</reg><orig>успѣлъ</orig></choice>
 <del n="n36">
     <p rend="left">
 <choice original_editorial_correction="изуч[ить]"><sic>изуч</sic><corr>изучить</corr></choice>
 </p>
    </del>
 узнать <choice><reg>их</reg><orig>ихъ</orig></choice>
 <del n="n37">
     <p rend="left">
