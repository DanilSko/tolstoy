   <head rend="center">
    <hi rend="strong">
     НЕОПУБЛИКОВАННОЕ
    </hi>
    <lb/>
    <hi rend="strong">
     НЕЗАКОНЧЕННОЕ
    </hi>
    <lb/>
    <hi rend="strong">
     И НЕОТДЕЛАННОЕ
    </hi>
   </head>
