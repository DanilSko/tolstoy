    <choice>
     <reg>
      их
     </reg>
     <orig>
      ихъ
     </orig>
    </choice>
    <choice>
     <reg>
      цель
     </reg>
     <orig>
      цѣль
     </orig>
    </choice>
    .
    <choice>
     <reg>
